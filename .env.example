# voice-llm - Environment Variables
# Copy this file to .env and fill in your API keys

# Daily (Transport)
DAILY_API_KEY=
DAILY_SAMPLE_ROOM_URL=  # Optional: leave empty to create a new room

# Gladia (STT - Speech to Text)
GLADIA_API_KEY=
GLADIA_REGION=eu-west  # Options: eu-west, us-east

# Cartesia (TTS - Text to Speech)
CARTESIA_API_KEY=
CARTESIA_VOICE_ID=

# OpenAI (LLM and Embeddings)
OPENAI_API_KEY=

# Multilingual Support - Indian Languages
SUPPORTED_LANGUAGES=en,bn,hi,ml,mr,ta,te,kn  # English, Bengali, Hindi, Malayalam, Marathi, Tamil, Telugu, Kannada
DEFAULT_LANGUAGE=en

# Cartesia Voice IDs for Different Languages
# Get voice IDs from: https://docs.cartesia.ai/getting-started/available-voices
CARTESIA_VOICE_ID_EN=  # English voice
CARTESIA_VOICE_ID_BN=  # Bengali (বাংলা) voice
CARTESIA_VOICE_ID_HI=  # Hindi (हिन्दी) voice
CARTESIA_VOICE_ID_ML=  # Malayalam (മലയാളം) voice
CARTESIA_VOICE_ID_MR=  # Marathi (मराठी) voice
CARTESIA_VOICE_ID_TA=  # Tamil (தமிழ்) voice
CARTESIA_VOICE_ID_TE=  # Telugu (తెలుగు) voice
CARTESIA_VOICE_ID_KN=  # Kannada (ಕನ್ನಡ) voice
